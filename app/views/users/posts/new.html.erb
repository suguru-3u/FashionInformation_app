<div class="container">
	<h2 class = "mb-3 mt-3 text-center">洋服の質問投稿</h2>

		<%= form_for(@post,url: users_posts_path, method: :post) do |f| %>

		<!-- エラーメッセージ表示-->
		<% if @post.errors.any? %>
		<h3><%= @post.errors.count %>件のエラーが発生</h3>
		<ul>
			<% @post.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
		<% end %>

		<!-- ユーザー情報表示-->
		<div class="row">
			<div class="col mt-4 ">
				<%= f.label :'タイトル' %><br>
				<%= f.text_field :title,class:'form-control' %>
			</div>

			<div class="col mt-4">
				<%= f.label :'画像' %><br/>
				<%= f.attachment_field :post_image %>
			</div>
		</div>

		<div class="mt-4 ">
			<%= f.label :'本文' %><br/>
			<%= f.text_area :post_body,class:'form-control' %>
		</div>

		<div class="mt-4">
			<%= f.submit "投稿する",class: 'btn btn-info'%>
		</div>

		<% end %>

</div>

<div class="container pt-5 mt-5">
  <h2>詳細</h2>
  <%= form_for(@post,url:users_post_path(@post) , method: :PATCH) do |f| %>

  <!-- エラーメッセージ表示-->
  <% if @post.errors.any? %>
  <h3><%= @post.errors.count %>件のエラーが発生</h3>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <!-- ユーザー情報表示-->
  <div class="row">
    <div class="col">
      <%= f.label :'タイトル' %><br>
      <%= f.text_field :title,class:'form-control' %>
    </div>

    <div class="col">
      <%= f.label :'本文' %><br/>
      <%= f.text_area :post_body,class:'form-control ', rows: 5 %>
    </div>
  </div>

  <div class="mt-4">
    <%= f.label :'画像' %><br/>
    <%= f.attachment_field :post_image %>
  </div>

  <div class="mt-4">
    <%= f.submit "保存",class: 'btn btn-info mr-3'%>
    <%= link_to '戻る',users_posts_path,class: 'btn btn-info' %>
  </div>

  <% end %>
</div>

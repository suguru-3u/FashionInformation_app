<h2>質問一覧</h2>

<table>
  <% @posts.each do |post| %>
  <thead>
    <tr>
      <th>タイトル</th><th>詳細</th><th>削除</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= post.title %></td>
      <% if post.user_id == current_user.id %>
      <td><%= link_to '詳細',edit_users_post_path(post) %></td>
      <td><%= link_to '削除',users_post_path(post),method: :delete %></td>
      <% end %>
    </tr>
  </tbody>
  <% end %>
</table>

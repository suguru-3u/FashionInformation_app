<h2>お問い合わせ</h2>
<%= form_for(@contact,url: users_contacts_path, method: :post) do |f| %>

<!-- エラーメッセージ表示-->
<% if @contact.errors.any? %>
	<h3><%= @contact.errors.count %>error occurrence</h3><!--エラーメッセ-->
	<ul>
		<% @contact.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>

<!-- ユーザー情報表示-->
<div class="field">
	<%= f.label :'タイトル' %>
	<%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :'本文' %><br/>
  <%= f.text_area :contact_body %>
</div>

<div class="actions">
	<%= f.submit "送信"%>
</div>

<% end %>

<!DOCTYPE html>
<html>
  <head>
    <title>FashionInformationApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container collapse navbar-collapse h5">
          <ul class='navbar-nav mr-auto'>
            <li class="nav-item">
              <span class:'nav-link'>FashionInformation_App</span>
            </li>
          </ul>
          <ul class='navbar-nav'>
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'My Page', users_users_path,class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to "質問投稿", new_users_post_path,class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to "質問一覧", users_posts_path,class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to "Youtube検索", users_youtube_index_path,class: 'nav-link'%>
              </li>
              <li class="nav-item">
                <%= link_to "Youtubeお気に入り", users_users_youtube_path,class: 'nav-link' %>
              </li>
              <li>
                <%= link_to "お問い合わせ", new_users_contact_path,class: 'nav-link'%>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete,class: 'nav-link'%>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to ' Top', root_path,class: 'nav-link'%>
              </li>
              <li>
                <%= link_to "About", users_homes_about_path,class: 'nav-link'%>
              </li>
              <li>
                <%= link_to "新規登録", new_user_registration_path,class: 'nav-link'%>
              </li>
              <li>
                <%= link_to "ログイン", new_user_session_path,class: 'nav-link'%>
              </li>
            <% end %>
          </ul>
          </div>
        </nav>
    </header>

    <%= yield %>

  </body>
</html>

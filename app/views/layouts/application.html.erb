<!DOCTYPE html>
<html>
  <head>
    <title>FashionInformationApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container collapse navbar-collapse h5">
          <ul class='navbar-nav mr-auto'>
            <li class="nav-item">
              <span class='nav-link'>FashionInformation_App</span>
            </li>
          </ul>
            <!-- ユーザーと管理者で分けている -->
          <% if admin_signed_in? %>
            <%= render '/layouts/navbar_admin' %>
          <% else %>
            <%= render '/layouts/navbar_user' %>
          <% end %>
          </div>
        </nav>
    </header>

    <%= yield %>

  </body>
</html>

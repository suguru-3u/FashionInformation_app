<!DOCTYPE html>
<html>
  <head>
    <title>FashionInformationApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul>
      <li>
      <%= link_to "新規登録", new_user_registration_path,class: "btn btn-nav text-light"%>
      </li>
      <li>
        <%= link_to "ログイン", new_user_session_path,class: "btn btn-nav text-light mr-3"%>
      </li>
      <li>
        <%= link_to "質問投稿", new_users_post_path,class: "btn btn-nav text-light"%>
      </li>
      <li>
        <%= link_to "質問一覧", users_posts_path,class: "btn btn-nav text-light"%>
      </li>
      <li>
        <%= link_to "ユーザー情報", edit_users_users_path,class: "btn btn-nav text-light mr-3"%>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete,class: "btn btn-nav text-light"%>
      </li>
    </ul>
    <%= yield %>
  </body>
</html>

<div class="container mt-5 pt-3">
  <h2 class ='text-center mt-3 mb-3'>お知らせ詳細</h2>
  <div class="card p-5">
    <%= form_for(@notice,url: admins_notice_path, method: :PATCH) do |f| %>

    <!-- エラーメッセージ表示-->
    <% if @notice.errors.any? %>
    	<h3><%= @notice.errors.count %>error occurrence</h3><!--エラーメッセ-->
    	<ul>
    		<% @notice.errors.full_messages.each do |message| %>
    		<li><%= message %></li>
    		<% end %>
    	</ul>
    <% end %>

    <div class="field">
    	<%= f.label :'タイトル' %><br>
    	<%= f.text_field :announce_title,class:'form-control' %>
    </div>

    <div class="field">
      <%= f.label :'本文' %><br/>
      <%= f.text_area :announce_body,class:'form-control' %>
    </div>

    <div class="actions">
    	<%= f.submit "お知らせの変更",class: 'btn btn-outline-primary mt-5 mb-5 mr-5'%>
      <%= link_to '戻る',admins_notices_path,class: 'btn btn-outline-secondary' %>
    </div>

    <% end %>

  </div>
</div>
